<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_image"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="178%"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/batman"
                android:contentDescription="@string/movie_image" />

        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/movie_title"
            android:layout_height="wrap_content"  android:layout_width="match_parent"
            android:text="Test de titre de film assez long pour causer des line breaks"
            android:textColor="@color/colorCardPrimaryText"
            android:textSize="@dimen/card_primary_text_size"
            android:paddingStart="@dimen/card_primary_text_start_padding"
            android:paddingLeft="@dimen/card_primary_text_start_padding"
            android:paddingEnd="@dimen/card_primary_text_end_padding"
            android:paddingRight="@dimen/card_primary_text_end_padding"
            android:paddingTop="@dimen/card_primary_text_top_padding"
            android:paddingBottom="@dimen/card_primary_text_bottom_padding" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/card_actions_padding"
            android:layout_gravity="end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_card_giftcard_black_24dp"
                android:contentDescription="@string/add_whishlist" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>